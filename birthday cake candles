#include <iostream>

using namespace std;

int main() {
    
    int n, s = 0, k, x;
    
    cin >> n;
    
    for( int i=0; i<n; i++ ) {
        cin >> x;
        
        if( x > s ) {
            s = x; 
            k = 1;
        }
        else if( x == s )
            k++;
    }
    
    cout << k;
    
    
    return 0;
}
